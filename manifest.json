{
  "name": "PangBot Web Extension",
  "version": "1.0",
  "description": "Some tweaks for KwangWoon University website",
  "permissions": [
    "activeTab", 
    "declarativeContent", 
    "storage", 
    "webNavigation",
    "http://*/*",
    "https://*/*"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js","cookie.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/PangBot_logo16.png",
      "32": "images/PangBot_logo32.png",
      "48": "images/PangBot_logo48.png",
      "128": "images/PangBot_logo128.png"
    }
  },
  "icons": {
    "16": "images/PangBot_logo16.png",
    "32": "images/PangBot_logo32.png",
    "48": "images/PangBot_logo48.png",
    "128": "images/PangBot_logo128.png"
  },
  "manifest_version": 2
}
